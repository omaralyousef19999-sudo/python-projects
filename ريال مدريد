                text: 'المباريات'
                on_release: app.root.current = 'matches'
            Button:
                text: 'الترتيب' 
                on_release: app.root.current = 'standings'
            Button:
                text: 'إعادة الضبط'
                on_release: root.reset_tournament()
        
        Label:
            text: 'الجولة: ' + str(root.round_label)
