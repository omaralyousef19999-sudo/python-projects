# ucl_manager.py - النسخة النهائية 100% شغالة بدون أي خطأ

import sys
import sqlite3
from pathlib import Path
import pandas as pd
import matplotlib.pyplot as plt
from matplotlib.backends.backend_qtagg import FigureCanvasQTAgg as FigureCanvas
from PyQt6.QtWidgets import *
from PyQt6.QtCore import Qt, QDate
from PyQt6.QtGui import QColor

DB_PATH = Path("ucl_database.db")

def init_db():
    conn = sqlite3.connect(DB_PATH)
    c = conn.cursor()
    c.execute('''CREATE TABLE IF NOT EXISTS teams (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        name TEXT UNIQUE NOT NULL,
        country TEXT,
        group_char TEXT
    )''')
    c.execute('''CREATE TABLE IF NOT EXISTS matches (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        home_team TEXT,
        away_team TEXT,
        home_goals INTEGER,
        away_goals INTEGER,
        date TEXT
    )''')
    conn.commit()
    conn.close()

def add_team(name, country, group):
    conn = sqlite3.connect(DB_PATH)
    c = conn.cursor()
    try:
        c.execute("INSERT INTO teams (name, country, group_char) VALUES (?, ?, ?)", (name, country, group))
        conn.commit()
        return True
    except sqlite3.IntegrityError:
        return False
    finally:
        conn.close()

def add_match(home, away, hg, ag, date):
    conn = sqlite3.connect(DB_PATH)
    c = conn.cursor()
    c.execute("INSERT INTO matches (home_team, away_team, home_goals, away_goals, date) VALUES (?, ?, ?, ?, ?)",
              (home, away, hg, ag, date))
    conn.commit()
    conn.close()

def get_teams():
    conn = sqlite3.connect(DB_PATH)
    try:
        df = pd.read_sql_query("SELECT name FROM teams ORDER BY name", conn)
        return df["name"].tolist()
    except:
        return []
    finally:
        conn.close()

def get_standings():
    conn = sqlite3.connect(DB_PATH)
    query = """
    SELECT 
        t.name,
        COUNT(m.id) AS P,
        SUM(CASE WHEN (m.home_team = t.name AND m.home_goals > m.away_goals) OR 
                      (m.away_team = t.name AND m.away_goals > m.home_goals) THEN 1 ELSE 0 END) AS W,
        SUM(CASE WHEN m.home_goals = m.away_goals AND m.home_goals IS NOT NULL THEN 1 ELSE 0 END) AS D,
        SUM(CASE WHEN (m.home_team = t.name AND m.home_goals < m.away_goals) OR 
                      (m.away_team = t.name AND m.away_goals < m.home_goals) THEN 1 ELSE 0 END) AS L,
        COALESCE(SUM(CASE WHEN m.home_team = t.name THEN m.home_goals ELSE m.away_goals END), 0) AS GF,
        COALESCE(SUM(CASE WHEN m.home_team = t.name THEN m.away_goals ELSE m.home_goals END), 0) AS GA,
        (COALESCE(SUM(CASE WHEN m.home_team = t.name THEN m.home_goals ELSE m.away_goals END), 0) -
         COALESCE(SUM(CASE WHEN m.home_team = t.name THEN m.away_goals ELSE m.home_goals END), 0)) AS GD,
        (SUM(CASE WHEN (m.home_team = t.name AND m.home_goals > m.away_goals) OR 
                       (m.away_team = t.name AND m.away_goals > m.home_goals) THEN 3
             WHEN m.home_goals = m.away_goals AND m.home_goals IS NOT NULL THEN 1 ELSE 0 END)) AS Pts
    FROM teams t
    LEFT JOIN matches m ON m.home_team = t.name OR m.away_team = t.name
    GROUP BY t.name
    ORDER BY Pts DESC, GD DESC, GF DESC
    """
    df = pd.read_sql_query(query, conn)
    conn.close()
    return df

class MainWindow(QMainWindow):
    def __init__(self):
        super().__init__()
        self.lang = "ar"  # البداية عربي
        self.setWindowTitle("نظام دوري أبطال أوروبا")
        self.resize(1350, 800)
        self.setStyleSheet("""
            background:#001f3f; color:white;
            QPushButton{background:#FFD700; color:#001f3f; font-weight:bold; padding:10px; border-radius:8px;}
            QPushButton:hover{background:#FFC107;}
            QTabWidget::pane{border:3px solid #FFD700; background:#112240;}
            QTabBar::tab{background:#003366; color:white; padding:14px; border-radius:8px;}
            QTabBar::tab:selected{background:#FFD700; color:#001f3f; font-weight:bold;}
        """)

        central = QWidget()
        self.setCentralWidget(central)
        layout = QVBoxLayout(central)

        # شريط اللغة
        top_bar = QHBoxLayout()
        top_bar.addStretch()
        self.lang_btn = QPushButton("English")
        self.lang_btn.clicked.connect(self.toggle_lang)
        top_bar.addWidget(self.lang_btn)
        layout.addLayout(top_bar)

        # التبويبات
        self.tabs = QTabWidget()
        layout.addWidget(self.tabs)

        # تطبيق اللغة والاتجاه وتحديث الواجهة
        self.apply_lang_and_direction()
        self.refresh_ui()

    def toggle_lang(self):
        self.lang = "en" if self.lang == "ar" else "ar"
        self.apply_lang_and_direction()
        self.refresh_ui()

    def apply_lang_and_direction(self):
        if self.lang == "ar":
            self.setLayoutDirection(Qt.LayoutDirection.RightToLeft)
            self.lang_btn.setText("English")
            self.setWindowTitle("نظام دوري أبطال أوروبا")
        else:
            self.setLayoutDirection(Qt.LayoutDirection.LeftToRight)
            self.lang_btn.setText("العربية")
            self.setWindowTitle("UEFA Champions League System")

    def refresh_ui(self):
        self.tabs.clear()
        titles = ["الفرق", "المباريات", "الترتيب", "التحليل"] if self.lang == "ar" else ["Teams", "Matches", "Standings", "Analysis"]
        self.tabs.addTab(self.tab_teams(), titles[0])
        self.tabs.addTab(self.tab_matches(), titles[1])
        self.tabs.addTab(self.tab_standings(), titles[2])
        self.tabs.addTab(self.tab_chart(), titles[3])

    def tab_teams(self):
        w = QWidget(); l = QVBoxLayout(w)
        g = QGroupBox("إضافة فريق جديد" if self.lang=="ar" else "Add New Team")
        f = QFormLayout(g)
        self.team_name = QLineEdit()
        self.team_country = QLineEdit()
        self.team_group = QComboBox(); self.team_group.addItems(["A","B","C","D","E","F","G","H"])
        btn = QPushButton("إضافة الفريق" if self.lang=="ar" else "Add Team")
        btn.clicked.connect(self.add_team_action)
        f.addRow("اسم الفريق:" if self.lang=="ar" else "Team Name:", self.team_name)
        f.addRow("الدولة:" if self.lang=="ar" else "Country:", self.team_country)
        f.addRow("المجموعة:" if self.lang=="ar" else "Group:", self.team_group)
        f.addRow(btn); l.addWidget(g); l.addStretch(); return w

    def add_team_action(self):
        name = self.team_name.text().strip()
        country = self.team_country.text().strip()
        group = self.team_group.currentText()
        if name and country:
            if add_team(name, country, group):
                QMessageBox.information(self, "تم", "تم إضافة الفريق بنجاح!")
                self.team_name.clear(); self.team_country.clear()
                self.refresh_ui()
            else:
                QMessageBox.warning(self, "خطأ", "الفريق موجود مسبقًا!")
        else:
            QMessageBox.warning(self, "خطأ", "يرجى ملء جميع الحقول")

    def tab_matches(self):
        w = QWidget(); l = QVBoxLayout(w)
        g = QGroupBox("إضافة مباراة" if self.lang=="ar" else "Add Match")
        f = QFormLayout(g)
        teams = get_teams()
        self.home_team = QComboBox(); self.home_team.addItems(teams)
        self.away_team = QComboBox(); self.away_team.addItems(teams)
        self.home_goals = QSpinBox(); self.home_goals.setRange(0,20)
        self.away_goals = QSpinBox(); self.away_goals.setRange(0,20)
        self.match_date = QDateEdit(); self.match_date.setDate(QDate.currentDate())
        btn = QPushButton("إضافة المباراة" if self.lang=="ar" else "Add Match")
        btn.clicked.connect(self.add_match_action)
        refresh_btn = QPushButton("تحديث قائمة الفرق" if self.lang=="ar" else "Refresh Teams")
        refresh_btn.clicked.connect(lambda: (self.home_team.clear(), self.home_team.addItems(get_teams()),
                                            self.away_team.clear(), self.away_team.addItems(get_teams())))
        f.addRow("الفريق المضيف:" if self.lang=="ar" else "Home Team:", self.home_team)
        f.addRow("الأهداف:" if self.lang=="ar" else "Goals:", self.home_goals)
        f.addRow("الفريق الضيف:" if self.lang=="ar" else "Away Team:", self.away_team)
        f.addRow("الأهداف:" if self.lang=="ar" else "Goals:", self.away_goals)
        f.addRow("التاريخ:" if self.lang=="ar" else "Date:", self.match_date)
        f.addRow(btn); l.addWidget(g); l.addWidget(refresh_btn); l.addStretch(); return w

    def add_match_action(self):
        h = self.home_team.currentText()
        a = self.away_team.currentText()
        if h and a and h != a:
            add_match(h, a, self.home_goals.value(), self.away_goals.value(),
                      self.match_date.date().toString("yyyy-MM-dd"))
            QMessageBox.information(self, "تم", "تم إضافة المباراة بنجاح!")
            self.refresh_ui()
        else:
            QMessageBox.warning(self, "خطأ", "اختر فريقين مختلفين!")

    def tab_standings(self):
        w = QWidget(); l = QVBoxLayout(w)
        self.table = QTableWidget(); l.addWidget(self.table)
        btn = QPushButton("تحديث الترتيب" if self.lang=="ar" else "Refresh Standings")
        btn.clicked.connect(self.update_table)
        l.addWidget(btn); self.update_table(); return w

    def update_table(self):
        df = get_standings()
        if df.empty: return
        headers = ["الفريق","لعب","فوز","تعادل","خسارة","له","عليه","فارق","نقاط"] if self.lang=="ar" else \
                  ["Team","P","W","D","L","GF","GA","GD","Pts"]
        self.table.setColumnCount(9)
        self.table.setHorizontalHeaderLabels(headers)
        self.table.setRowCount(len(df))
        for i, row in df.iterrows():
            values = [row["name"], str(row["P"]), str(row["W"]), str(row["D"]), str(row["L"]),
                     str(row["GF"]), str(row["GA"]), str(row["GD"]), str(row["Pts"])]
            for j, val in enumerate(values):
                item = QTableWidgetItem(val)
                if i < 4:
                    item.setBackground(QColor(0, 220, 0, 100))
                self.table.setItem(i, j, item)

    def tab_chart(self):
        w = QWidget(); l = QVBoxLayout(w)
        self.canvas = FigureCanvas(plt.Figure(figsize=(12,8)))
        l.addWidget(self.canvas)
        btn = QPushButton("تحديث الرسم البياني" if self.lang=="ar" else "Update Chart")
        btn.clicked.connect(self.draw_chart)
        l.addWidget(btn)
        self.draw_chart()
        return w

    def draw_chart(self):
        df = get_standings().head(12)
        if df.empty: return
        self.canvas.figure.clear()
        ax = self.canvas.figure.add_subplot(111)
        bars = ax.barh(df["name"], df["Pts"], color="#FFD700", edgecolor="white")
        ax.set_facecolor("#001f3f")
        ax.tick_params(colors="white", labelsize=13)
        ax.set_xlabel("النقاط" if self.lang=="ar" else "Points", color="white", fontsize=14)
        ax.set_title("أفضل 12 فريق" if self.lang=="ar" else "Top 12 Teams", color="#FFD700", fontsize=20, fontweight="bold")
        ax.invert_yaxis()
        ax.grid(axis='x', color='gray', alpha=0.3)
        for i, v in enumerate(df["Pts"]):
            ax.text(v + 0.3, i, str(v), color="white", va='center', fontweight='bold', fontsize=13)
        plt.subplots_adjust(left=0.32)
        self.canvas
