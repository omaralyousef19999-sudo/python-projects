import tkinter as tk
import random

# نافذة رئيسية
window = tk.Tk()
window.title("Rock Paper Scissors Game 🎮")
window.geometry("500x600")
window.config(bg="#1e1e2e")

# ألوان وتنسيق عام
font_title = ("Arial", 22, "bold")
font_text = ("Arial", 14)
button_style = {"bg": "#3a3a5c", "fg": "white", "font": ("Arial", 14, "bold"), "width": 10, "relief": "raised"}

# عنوان اللعبة
title_label = tk.Label(window, text="🪨 Rock  📄 Paper  ✂️ Scissors", font=font_title, fg="#FFD700", bg="#1e1e2e")
title_label.pack(pady=20)

# منطقة عرض النتائج
result_label = tk.Label(window, text="Choose your move!", font=("Arial", 16, "bold"), fg="white", bg="#1e1e2e")
result_label.pack(pady=30)

# منطقة عرض اختيارات المستخدم والكمبيوتر
player_choice_label = tk.Label(window, text="", font=font_text, fg="#00BFFF", bg="#1e1e2e")
player_choice_label.pack(pady=10)

computer_choice_label = tk.Label(window, text="", font=font_text, fg="#FF4500", bg="#1e1e2e")
computer_choice_label.pack(pady=10)

# منطق اللعبة
def play(player_choice):
    choices = ["rock", "paper", "scissors"]
    computer_choice = random.choice(choices)

    # عرض اختيارات
    icons = {"rock": "👊", "paper": "🖐", "scissors": "✌️"}
    player_choice_label.config(text=f"You chose: {icons[player_choice]} ({player_choice})")
    computer_choice_label.config(text=f"Computer chose: {icons[computer_choice]} ({computer_choice})")

    # تحديد الفائز
    if player_choice == computer_choice:
        result = "It's a Tie 🤝"
        color = "#AAAAAA"
    elif (player_choice == "rock" and computer_choice == "scissors") or \
         (player_choice == "paper" and computer_choice == "rock") or \
         (player_choice == "scissors" and computer_choice == "paper"):
        result = "You Win! 🎉"
        color = "#00FF7F"
    else:
        result = "You Lose 😢"
        color = "#FF4040"

    result_label.config(text=result, fg=color)

# أزرار الخيارات
buttons_frame = tk.Frame(window, bg="#1e1e2e")
buttons_frame.pack(pady=30)

rock_button = tk.Button(buttons_frame, text="Rock 👊", command=lambda: play("rock"), **button_style)
rock_button.grid(row=0, column=0, padx=10)

paper_button = tk.Button(buttons_frame, text="Paper 🖐", command=lambda: play("paper"), **button_style)
paper_button.grid(row=0, column=1, padx=10)

scissors_button = tk.Button(buttons_frame, text="Scissors ✌️", command=lambda: play("scissors"), **button_style)
scissors_button.grid(row=0, column=2, padx=10)

# زر لإعادة التشغيل
def reset_game():
    result_label.config(text="Choose your move!", fg="white")
    player_choice_label.config(text="")
    computer_choice_label.config(text="")

reset_button = tk.Button(window, text="🔁 Play Again", command=reset_game, bg="#2ecc71", fg="white", font=("Arial", 12, "bold"))
reset_button.pack(pady=20)

# زر الخروج
exit_button = tk.Button(window, text="❌ Exit", command=window.destroy, bg="#e74c3c", fg="white", font=("Arial", 12, "bold"))
exit_button.pack()

# تشغيل النافذة
window.mainloop()
