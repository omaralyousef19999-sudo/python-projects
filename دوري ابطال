# main.py - UCL Predictor 2025 | النسخة الأسطورية الكاملة (كل حاجة شغالة)
from kivy.app import App
from kivy.uix.boxlayout import BoxLayout
from kivy.uix.label import Label
from kivy.uix.button import Button
from kivy.uix.textinput import TextInput
from kivy.uix.scrollview import ScrollView
from kivy.uix.gridlayout import GridLayout
from kivy.uix.image import AsyncImage
from kivy.uix.modalview import ModalView
from kivy.uix.popup import Popup
from kivy.uix.tabbedpanel import TabbedPanel, TabbedPanelItem
from kivy.clock import Clock
from kivy.animation import Animation
from kivy.graphics import Color, RoundedRectangle, Line
from kivy.core.window import Window
from kivy.metrics import dp, sp
from kivy.network.urlrequest import UrlRequest
import json
import os
from datetime import datetime
import threading
import random

Window.clearcolor = (0.04, 0.06, 0.12, 1)
Window.size = (420, 850)

DATA_FILE = "ucl2025_data.json"
team_logos = {
    "Arsenal": "https://resources.premierleague.com/premierleague/badges/70/t3.png",
    "Liverpool": "https://resources.premierleague.com/premierleague/badges/70/t14.png",
    "Real Madrid": "https://ssl.gstatic.com/onebox/media/sports/logos/Th4fAVAZeBJXJ7Dx5R2u5w_96x96.png",
    "Paris SG": "https://ssl.gstatic.com/onebox/media/sports/logos/z0t2Nes1pUlF5cQ5c7nL0A_96x96.png",
    "Bayern Munich": "https://ssl.gstatic.com/onebox/media/sports/logos/6wyIvIig7fU8SCIo8N3yGw_96x96.png",
    "Slavia Praha": "https://upload.wikimedia.org/wikipedia/en/9/9c/Slavia_Prague_logo.png",
}

players = {
    "Arsenal": ["Saka", "Ødegaard", "Rice", "Martinelli"],
    "Liverpool": ["Salah", "Díaz", "Núñez", "Van Dijk"],
    "Real Madrid": ["Vinícius", "Mbappé", "Bellingham", "Rodrygo"],
    "Paris SG": ["Mbappé", "Dembélé", "Barcola", "Vitinha"],
    "Bayern Munich": ["Kane", "Musiala", "Sané", "Müller"],
    "Slavia Praha": ["Provod", "Hromada", "Schranz", "Chytil"],
}

matches = [
    {"id": "1", "team1": "Arsenal", "team2": "Slavia Praha", "date": "25 نوفمبر 21:00", "score": "3-1", "live": True},
    {"id": "2", "team1": "Liverpool", "team2": "Real Madrid", "date": "26 نوفمبر 20:45", "score": "2-2", "live": True},
    {"id": "3", "team1": "Paris SG", "team2": "Bayern Munich", "date": "25 نوفمبر 21:00", "score": "0-1", "live": False},
]

class Data:
    @staticmethod
    def load(): return json.load(open(DATA_FILE, encoding="utf-8")) if os.path.exists(DATA_FILE) else {"users": {}, "predictions": {}, "chat": [], "leaderboard": {}}
    @staticmethod
    def save(d): json.dump(d, open(DATA_FILE, "w", encoding="utf-8"), indent=4, ensure_ascii=False)

data = Data.load()

class UCLApp(App):
    def build(self):
        self.title = "UCL Predictor 2025"
        self.user = None

        root = TabbedPanel(do_default_tab=False, tab_pos="top_mid")

        # تبويب المباريات
        tab1 = TabbedPanelItem(text="المباريات")
        scroll = ScrollView()
        self.matches_grid = GridLayout(cols=1, spacing=dp(20), size_hint_y=None, padding=dp(20))
        self.matches_grid.bind(minimum_height=self.matches_grid.setter('height'))
        scroll.add_widget(self.matches_grid)
        tab1.add_widget(scroll)
        root.add_widget(tab1)

        # تبويب التوقعات
        tab2 = TabbedPanelItem(text="التوقعات")
        self.pred_grid = GridLayout(cols=1, spacing=dp(15), size_hint_y=None, padding=dp(20))
        pred_scroll = ScrollView()
        pred_scroll.add_widget(self.pred_grid)
        tab2.add_widget(pred_scroll)
        root.add_widget(tab2)

        # تبويب الشات
        tab3 = TabbedPanelItem(text="الشات")
        chat_layout = BoxLayout(orientation='vertical')
        self.chat_scroll = ScrollView()
        self.chat_grid = GridLayout(cols=1, spacing=dp(10), size_hint_y=None, padding=dp(10))
        self.chat_grid.bind(minimum_height=self.chat_grid.setter('height'))
        self.chat_scroll.add_widget(self.chat_grid)
        chat_input = TextInput(hint_text="اكتب رسالة...", size_hint_y=None, height=dp(50))
        send_btn = Button(text="إرسال", size_hint_x=0.2, on_press=lambda x: self.send_message(chat_input.text))
        chat_input.bind(on_text_validate=lambda x: self.send_message(chat_input.text))
        chat_bottom = BoxLayout(size_hint_y=None, height=dp(60))
        chat_bottom.add_widget(chat_input)
        chat_bottom.add_widget(send_btn)
        chat_layout.add_widget(self.chat_scroll)
        chat_layout.add_widget(chat_bottom)
        tab3.add_widget(chat_layout)
        root.add_widget(tab3)

        # تبويب الليدربورد
        tab4 = TabbedPanelItem(text="الترتيب")
        lb_scroll = ScrollView()
        self.lb_grid = GridLayout(cols=1, spacing=dp(10), size_hint_y=None, padding=dp(20))
        self.lb_grid.bind(minimum_height=self.lb_grid.setter('height'))
        lb_scroll.add_widget(self.lb_grid)
        tab4.add_widget(lb_scroll)
        root.add_widget(tab4)

        Clock.schedule_interval(self.update_all, 30)  # لايف كل 30 ثانية
        self.refresh_all()
        return root

    def login(self, username):
        self.user = username
        self.root.tab_list[0].text = f"مرحباً {username}!"

    def refresh_all(self, *args):
        self.show_matches()
        self.show_predictions()
        self.show_chat()
        self.show_leaderboard()

    def show_matches(self):
        self.matches_grid.clear_widgets()
        for m in matches:
            card = BoxLayout(size_hint_y=None, height=dp(220), padding=dp(15))
            with card.canvas.before:
                Color(0.08, 0.10, 0.18, 1)
                RoundedRectangle(pos=card.pos, size=card.size, radius=[dp(18)])
                Color(0.9, 0.2, 0.2, 1)
                Line(points=[card.x+30, card.y+card.height-8, card.x+card.width-30, card.y+card.height-8], width=5)

            top = BoxLayout(spacing=dp(20))
            left = BoxLayout(orientation='vertical')
            left.add_widget(AsyncImage(source=team_logos.get(m['team1'], "")))
            left.add_widget(Label(text=m['team1'], bold=True))

            mid = BoxLayout(orientation='vertical')
            mid.add_widget(Label(text=f"{m['team1']} vs {m['team2']}", bold=True, font_size=sp(18)))
            live = "مباشر" if m['live'] else "انتهت"
            mid.add_widget(Label(text=f"{m['date']} • {live} • {m['score']}", color=(0,1,0,1) if m['live'] else (1,0.5,0,1)))

            right = BoxLayout(orientation='vertical')
            right.add_widget(AsyncImage(source=team_logos.get(m['team2'], "")))
            right.add_widget(Label(text=m['team2'], bold=True))

            top.add_widget(left)
            top.add_widget(mid)
            top.add_widget(right)

            btn = Button(text="توقع الآن", background_color=(0,0.6,1,1), size_hint_y=None, height=dp(55))
            btn.bind(on_press=lambda x, match=m: self.open_predict(match))
            card.add_widget(top)
            card.add_widget(btn)
            self.matches_grid.add_widget(card)

    def open_predict(self, match):
        modal = ModalView(size_hint=(0.92, 0.9))
        layout = BoxLayout(orientation='vertical', padding=dp(20), spacing=dp(15))
        layout.add_widget(Label(text=f"{match['team1']} vs {match['team2']}", font_size=sp(24), bold=True, color=(0,0.8,1,1)))

        score = BoxLayout(spacing=dp(30), size_hint_y=None, height=dp(100))
        g1 = TextInput(text="2", font_size=sp(50), input_filter='int', halign='center')
        g2 = TextInput(text="1", font_size=sp(50), input_filter='int', halign='center')
        score.add_widget(g1)
        score.add_widget(Label(text="-", font_size=sp(60)))
        score.add_widget(g2)
        layout.add_widget(score)

        scorers = TextInput(hint_text="مثلاً: صلاح - مبابي 2", size_hint_y=None, height=dp(100))
        layout.add_widget(scorers)

        def save(btn):
            if not self.user:
                Popup(title="خطأ", content=Label(text="سجل دخول الأول!")).open()
                return
            pred_id = f"{match['id']}_{self.user}"
            data["predictions"][pred_id] = {
                "user": self.user, "match": match['id'], "score": f"{g1.text}-{g2.text}",
                "scorers": scorers.text, "time": datetime.now().strftime("%H:%M")
            }
            Data.save(data)
            modal.dismiss()
            Popup(title="تم!", content=Label(text="توقعك اتسجل يا وحش!")).open()

        Button(text="حفظ التوقع", background_color=(0.1,0.8,0.3,1), size_hint_y=None, height=dp(60), on_press=save).add_widget(layout)
        modal.add_widget(layout)
        modal.open()

    def show_predictions(self):
        self.pred_grid.clear_widgets()
        for pid, p in data["predictions"].items():
            card = BoxLayout(orientation='vertical', padding=dp(15), spacing=dp(10))
            card.add_widget(Label(text=f"توقع {p['user']}", bold=True))
            card.add_widget(Label(text=f"النتيجة: {p['score']}"))
            card.add_widget(Label(text=f"الهدافين: {p['scorers'] or '—'}"))
            card.add_widget(Label(text=f"الوقت: {p['time']}", color=(0.7,0.7,0.7,1)))
            self.pred_grid.add_widget(card)

    def send_message(self, text):
        if text.strip() and self.user:
            data["chat"].append({"user": self.user, "msg": text.strip(), "time": datetime.now().strftime("%H:%M")})
            Data.save(data)
            self.show_chat()

    def show_chat(self):
        self.chat_grid.clear_widgets()
        for msg in data["chat"][-50:]:
            lbl = Label(text=f"[b]{msg['user']}[/b]: {msg['msg']}\n[color=666666]{msg['time']}[/color]", markup=True, text_size=(None, None), halign='right')
            self.chat_grid.add_widget(lbl)

    def show_leaderboard(self):
        self.lb_grid.clear_widgets()
        ranking = sorted(data["leaderboard"].items(), key=lambda x: x[1], reverse=True)[:20]
        for i, (user, pts) in enumerate(ranking):
            row = BoxLayout(size_hint_y=None, height=dp(60), padding=dp(10))
            row.add_widget(Label(text=f"#{i+1}"))
            row.add_widget(Label(text=user, bold=True))
            row.add_widget(Label(text=f"{pts} نقطة", color=(0,1,0,1)))
            self.lb_grid.add_widget(row)

    def update_all(self, dt):
        threading.Thread(target=self.refresh_all, daemon=True).start()

# تسجيل دخول سريع
def quick_login():
    username = TextInput(hint_text="اسمك يا وحش", size_hint=(0.8,0.5))
    popup = Popup(title="سجل دخول", content=username, size_hint=(0.8,0.4))
    popup.open()
    username.bind(on_text_validate=lambda x: (app.login(username.text), popup.dismiss()))

app = UCLApp()
Clock.schedule_once(lambda dt: quick_login(), 1)
if __name__ == '__main__':
    app.run()
