        return header
    
    def create_team_row(self, team, rank):
        row = BoxLayout(size_hint_y=None, height=dp(32), padding=dp(5))
        bg_color = (0.12, 0.18, 0.28, 1) if rank % 2 == 0 else (0.15, 0.22, 0.35, 1)
        with row.canvas.before:
            Color(*bg_color)
            Rectangle(pos=row.pos, size=row.size)
        
        rank_emoji = 'ğŸ¥‡' if rank == 1 else 'ğŸ¥ˆ' if rank == 2 else 'ğŸ¥‰' if rank == 3 else f'{rank}'
        
        data = [
            rank_emoji,
            team['name'],
            str(team['played']),
            str(team['won']),
            str(team['drawn']),
            str(team['lost']),
            str(team['points'])
        ]
        
        for i, text in enumerate(data):
            row_label = ModernLabel(
                text=text,
                font_size=dp(11) if i != 1 else dp(10),
                bold=True if i in [0, 6] else False,
                color=(1, 0.8, 0.2, 1) if i == 6 else (1, 1, 1, 1),
                halign='center'
            )
            row.add_widget(row_label)
        
        return row
    
    def create_news_card(self, news_item):
