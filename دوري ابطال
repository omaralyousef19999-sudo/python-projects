# تحميل وحفظ البيانات
def load_data():
    if os.path.exists(DATA_FILE):
        try:
            with open(DATA_FILE, "r", encoding="utf-8") as f:
                return json.load(f)
        except:
            return {"users": {}, "predictions": {}, "chat": [], "points": {}}
    return {"users": {}, "predictions": {}, "chat": [], "points": {}}

def save_data(data):
    with open(DATA_FILE, "w", encoding="utf-8") as f:
        json.dump(data, f, indent=4, ensure_ascii=False)

data = load_data()

class UCLApp(App):
    def build(self):
        self.title = "UCL Predictor 2025"
        self.username = None

        # التبويبات
        tabs = TabbedPanel(do_default_tab=False, tab_pos="top_mid")
        tabs.background_color = (0.05, 0.07, 0.13, 1)

        # تبويب المباريات
        tab1 = TabbedPanelItem(text="المباريات")
        self.matches_grid = GridLayout(cols=1, spacing=dp(18), size_hint_y=None, padding=dp(15))
        self.matches_grid.bind(minimum_height=self.matches_grid.setter('height'))
        scroll1 = ScrollView()
        scroll1.add_widget(self.matches_grid)
        tab1.add_widget(scroll1)

        # تبويب التوقعات
        tab2 = TabbedPanelItem(text="توقعات اللاعبين")
        self.pred_grid = GridLayout(cols=1, spacing=dp(12), size_hint_y=None, padding=dp(15))
        self.pred_grid.bind(minimum_height=self.pred_grid.setter('height'))
        scroll2 = ScrollView()
        scroll2.add_widget(self.pred_grid)
        tab2.add_widget(scroll2)

        # تبويب الشات
        tab3 = TabbedPanelItem(text="الشات")
        chat_layout = BoxLayout(orientation='vertical')
        self.chat_grid = GridLayout(cols=1, spacing=dp(8), size_hint_y=None, padding=dp(10))
        self.chat_grid.bind(minimum_height=self.chat_grid.setter('height'))
        chat_scroll = ScrollView()
        chat_scroll.add_widget(self.chat_grid)
        self.msg_input = TextInput(hint_text="اكتب رسالتك هنا...", size_hint_y=None, height=dp(50))
        send_btn = Button(text="إرسال", size_hint_x=0.25, background_color=(0, 0.7, 1, 1))
        send_btn.bind(on_press=self.send_message)
        bottom = BoxLayout(size_hint_y=None, height=dp(60))
        bottom.add_widget(self.msg_input)
        bottom.add_widget(send_btn)
        chat_layout.add_widget(chat_scroll)
        chat_layout.add_widget(bottom)
        tab3.add_widget(chat_layout)

        # تبويب الترتيب
        tab4 = TabbedPanelItem(text="الترتيب")
        self.rank_grid = GridLayout(cols=1, spacing=dp(10), size_hint_y=None, padding=dp(20))
        self.rank_grid.bind(minimum_height=self.rank_grid.setter('height'))
        rank_scroll = ScrollView()
        rank_scroll.add_widget(self.rank_grid)
        tab4154.add_widget(rank_scroll)

        tabs.add_widget(tab1)
        tabs.add_widget(tab2)
        tabs.add_widget(tab3)
        tabs.add_widget(tab4)

        Clock.schedule_interval(self.refresh_all, 20)
        Clock.schedule_once(self.show_login, 1)

        return tabs

    def show_login(self, dt):
        popup = Popup(title="أهلاً بيك في UCL Predictor!", size_hint=(0.85, 0.5))
        layout = BoxLayout(orientation='vertical', padding=dp(20), spacing=dp(15))
        name_input = TextInput(hint_text="اسمك يا وحش", text="لاعب1", size_hint_y=None, height=dp(50))
        btn = Button(text="ابدأ اللعب", background_color=(0, 0.7, 1, 1), size_hint_y=None, height=dp(60))
        btn.bind(on_press=lambda x: self.login(name_input.text, popup))
        layout.add_widget(Label(text="سجل اسمك وخلينا نبدأ التحدي!", color=(1,1,1,1)))
        layout.add_widget(name_input)
        layout.add_widget(btn)
        popup.content = layout
        popup.open()

    def login(self, name, popup):
        if name.strip():
            self.username = name.strip()
            popup.dismiss()
            self.root.current_tab.text = f"اهلاً {self.username
